<!DOCTYPE html>
<html>
  <head>
    <title>PmApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag    'application' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div id="hello">
      {{ message }}
      <app />
    </div>
    <%= yield %>
  </body>
</html>
